<Window x:Name="Window" x:Class="PrimePotAutoStarter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimePotAutoStarter"
        mc:Ignorable="d"
        Title="PrimePot Autostarter" Height="230" Width="450" AutomationProperties.HelpText="PrimePot Autostarter">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="223*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Yes" Content="Ja" HorizontalAlignment="Center" Height="45" Margin="0,116,0,0" VerticalAlignment="Top" Width="105" FontSize="16" Click="Yes_Click"/>
        <Button x:Name="No" Content="Nein" HorizontalAlignment="Center" Height="45" Margin="0,116,0,0" VerticalAlignment="Top" Width="105" FontSize="16" Click="No_Click" Grid.Column="1"/>
        <TextBlock x:Name="textBlock" Margin="10,10,10,91" TextWrapping="Wrap" Text="Diese Anwendung legt im AutoStart-Ordner eine Verknüpfung zum PrimePot-Stream an. Soll der PrimePot-Stream beim Starten des Computers automatisch gestartet werden?" Grid.ColumnSpan="2" FontSize="16"/>
    </Grid>
</Window>
